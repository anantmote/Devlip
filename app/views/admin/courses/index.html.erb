<h1>Course List</h1> <br>

<%= link_to 'Add New Course', new_admin_course_path, class: "btn btn-info" %>&nbsp;&nbsp;
 <%= link_to 'Dashboard(Home)', admin_path, class: "btn btn-info" %>
 <br><br>  
<% if @course.count == 0 %>
<%= "No record presents" %>
<% else %>
<table border=1 cellspaceing="5">
	<tr>
		<td>Title</td>
		<td>Description</td>
		<td>Duration</td>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
	</tr>
	<% @course.each do |course| %>
		<tr>
			<td><%= link_to course.title , [:admin, course] %></td>
			<td><%= course.description %></td>
			<td><%= course.duration %></td>
			<td><%= link_to "Edit", edit_admin_course_path(course) %></td>
			<td><%= link_to "delete", [:admin, course], method: :delete, data: { confirm: 'Are you sure?' } %>	
			<td><%= link_to "Add Sections" , new_admin_section_path(:course_id=> course.id)  %></td>
			<td><%= link_to "View Sections" , admin_sections_path(:course_id=> course.id)  %></td>
		</tr>
	<% end %>
</table>
<% end %>	
